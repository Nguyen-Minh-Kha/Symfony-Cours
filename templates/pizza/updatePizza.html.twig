{% extends 'base.html.twig' %}

{% block title %}Modifier une pizza{% endblock %}

{% block body %}

     <h1>Modifier la pizza: {{ pizza.name }}</h1>
    <form method= "POST">
        <label for="name"> Nom: </label>
        <input type="text" name="name" id="name" value="{{ pizza.name }}"/>

        <label for="price"> Prix: </label>
        <input type="number" name="price" id="price" step="0.01" value="{{ pizza.price }}"/>

        <label for="description"> Description: </label>
        <textarea name="description" id="description" > {{ pizza.description }} </textarea>

        <label for="imageUrl"> Url de l'image: </label>
        <input type="url" name="imageUrl" id="imageUrl" value="{{ pizza.imageUrl }}"/>
        
        <button type="submit">Modifier</button>
    </form>
    

{% endblock %}